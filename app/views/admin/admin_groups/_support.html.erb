<%= render :partial => 'admin/common/access_sidebar' %>

<% context_menu do %>
  <%= icon_link_to(:group, 'List groups', :action => :index) %>
  <% if %w(edit update delete destroy access).include?(controller.action_name) %>
    | <%= icon_link_to(:group_pencil, 'Edit group', :action => :edit, :id => params[:id]) %>
    | <%= icon_link_to(:group_minus, 'Delete group', :action => :delete, :id => params[:id]) %>
  <% else %>
    | <%= icon_link_to(:group_plus, 'Add new group', :action => :new) %>
  <% end %>
<% end %>

